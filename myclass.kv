<MyGridLayout>   
    name:name
    password:password
    GridLayout:
        cols:1
        size: root.width, root.height
        GridLayout:
            cols:2
            Label:
                text:"Name"
            TextInput:
                multiline:False
                id:name
            Label:
                text:"Password"
            TextInput:
                multiline:False
                id:password
        Button:
            text:"Submit"
            on_press:root.press()

